@page "{id:int}"
@model UFNCC_DotNetASPTeste.Pages.Usuarios.EditarModel
@{
    ViewData["Title"] = "Editar Usu√°rio";
}
<h2 class="text-white text-center mb-4">@ViewData["Title"]</h2>

<form method="post" class="text-white p-4 rounded shadow" style="background-color: #001f3f; max-width: 400px; margin: auto;">
    <input type="hidden" asp-for="Usuario.Id" />

    <div class="mb-3">
        <label asp-for="Usuario.Nome" class="form-label"></label>
        <input asp-for="Usuario.Nome" class="form-control" />
        <span asp-validation-for="Usuario.Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Usuario.Email" class="form-label"></label>
        <input asp-for="Usuario.Email" class="form-control" />
        <span asp-validation-for="Usuario.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Usuario.Senha" class="form-label"></label>
        <input asp-for="Usuario.Senha" class="form-control" type="password" />
        <span asp-validation-for="Usuario.Senha" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button class="btn btn-success" type="submit">Salvar</button>
        <a class="btn btn-secondary ms-2" asp-page="/Usuarios/Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
